<Window x:Class="doseStats.doseCalc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:doseStats"
        mc:Ignorable="d"
        Title="doseCalc"
        HorizontalAlignment="Center" Height="880" Width="800" Background="DarkGray">
    <Grid>
        <ScrollViewer x:Name ="doseCalcScroller" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="786" Height="809" Margin="0,0,0,30" BorderBrush="Black">
            <TextBlock x:Name="doseCalcResults" FontSize="12" FontFamily="Courier New" Width="765" Background="White" ></TextBlock>
        </ScrollViewer>
        <Button x:Name="writeExcel" Content="Write to Excel (Ctrl + W)" HorizontalAlignment="Right" Width="150" Height="20" VerticalAlignment="Bottom" Margin="0,0,185,5" Click="writeExcel_Click"></Button>
        <Button x:Name="writeText" Content="Write to text (Ctrl + T)" HorizontalAlignment="Right" Width="140" Height="20" VerticalAlignment="Bottom" Margin="0,0,500,5" Click="writeText_Click"></Button>
    </Grid>
</Window>
